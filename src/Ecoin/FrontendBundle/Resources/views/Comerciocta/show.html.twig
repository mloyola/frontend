{% extends '::frontend_cia.html.twig' %}

{% block title %}    
    {{ 'Mis cuentas de pago'|trans({},lenguaje) }} - {{ 'Detalle'|trans({},lenguaje) }}    
{% endblock %}              

{% block comboidioma %}
  <li><a href="{{ path('comerciocta_show', { 'id': entity_comerciocta.id, '_locale': 'es' }) }}">{{ 'Español'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('comerciocta_show', { 'id': entity_comerciocta.id, '_locale': 'en' }) }}">{{ 'Ingles'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('comerciocta_show', { 'id': entity_comerciocta.id, '_locale': 'pt' }) }}">{{ 'Portugués'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('comerciocta_show', { 'id': entity_comerciocta.id, '_locale': 'it' }) }}">{{ 'Italiano'|trans({},lenguaje) }}</a></li>  
{% endblock %}  

{% block jumbotron %}

{% endblock %}      

{% block activelugar %} {% endblock %}
{% block activepago %} in {% endblock %}
{% block activecuenta %} {% endblock %}
{% block activerepo %} {% endblock %}

{% block contenido %}
  
  <div class ="col-xs-12 col-sm-12 col-md-10 col-lg-8">
     {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-success">
          <span class="glyphicon glyphicon-ok"></span>{{ flashMessage }}
        </div>
      {% endfor %}

    <div class="panel panel-default">  
      <div class="panel-heading">
        <span class="glyphicon glyphicon-list-alt text-info"></span> {{ 'Mis cuentas de pago'|trans({},lenguaje) }} - <span class="glyphicon glyphicon-eye-open"></span>{{ 'Detalle'|trans({},lenguaje) }}        
      </div>
      <div class="panel-body">    
      
        <form role="form">
          <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">   
            <label>{{ 'Banco'|trans({},lenguaje) }}</label>
            <input type="text" class="form-control" value="{{ entity_comerciocta.banco.descripcion }}" disabled>            
          </div>  

          <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">   
            <label>{{ 'Tipo de Cta.'|trans({},lenguaje) }}</label>
            <input type="text" class="form-control" value="{{ entity_comerciocta.tipocta.nombre }}" disabled>            
          </div>  

          <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">   
            <label>{{ 'N° de Cta.'|trans({},lenguaje) }}</label>
            <input type="text" class="form-control" value="{{ entity_comerciocta.numero }}" disabled>                        
          </div> 

          <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">   
            <label>{{ 'Moneda'|trans({},lenguaje) }}</label>
            <input type="text" class="form-control" value="{{ entity_comerciocta.moneda.descripcion }}" disabled>                        
          </div> 

          <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">   
            <a href="{{ path('comerciocta') }}" class="btn btn-primary btn-md btn-block" title="{{ 'Regresar'|trans({},lenguaje) }}"><span class="glyphicon glyphicon-th-list"></span>{{ 'Listado'|trans({},lenguaje) }}</a>
          </div>

          <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">   
            <a href="{{ path('comerciocta_edit', { 'id': entity_comerciocta.id }) }}" class="btn btn-warning btn-md btn-block" title="{{ 'Editar'|trans({},lenguaje) }}"><span class="glyphicon glyphicon-edit"></span>{{ 'Editar'|trans({},lenguaje) }}</a>
          </div>

          <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">               
            <button class="btn btn-danger btn-md btn-block" data-toggle="modal" data-target="#myModal">
              <span class="glyphicon glyphicon-remove"></span>{{ 'Eliminar'|trans({},lenguaje) }}
            </button>              
          </div>

        </div>

      </div>
    </div>
  </div>
  
  <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-list-alt text-info"></span> {{ 'Mis cuentas de pago'|trans({},lenguaje) }} - <span class="glyphicon glyphicon-remove"></span>{{ 'Eliminar'|trans({},lenguaje) }}</h4>
      </div>
      <div class="modal-body">
        <p><label>{{ 'Id'|trans({},lenguaje) }}:</label> {{ entity_comerciocta.id }}</p>
        <p><label>{{ 'Banco'|trans({},lenguaje) }}:</label> {{ entity_comerciocta.banco.descripcion }}</p>
        <p><label>{{ 'Tipo de Cta.'|trans({},lenguaje) }}:</label> {{ entity_comerciocta.tipocta.nombre }}</p>
        <p><label>{{ 'N° de Cta.'|trans({},lenguaje) }}:</label> {{ entity_comerciocta.numero }}</p>                            
        <p><label>{{ 'MOneda'|trans({},lenguaje) }}:</label> {{ entity_comerciocta.moneda.descripcion }}</p>   
      </div>
      <div class="modal-footer">
        {{ form_start(delete_form) }}
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Cerrar'|trans({},lenguaje) }}</button>     
        {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
        {{ form_end(delete_form) }}              
      </div>
    </div>
  </div>
</div>

{% endblock %}
