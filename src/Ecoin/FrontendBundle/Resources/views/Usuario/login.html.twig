                            </div>                                
                        </div>
                        <div class="row">
                            <div class="form-group" >
                                <label>{{ 'Contrase침a'|trans({},lenguaje) }}</label>
                                <input type="password" class="form-control" id="password" required data-validation-required-message="Please enter your password.">
                                
                            </div>                                
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">{{ 'Ingresar'|trans({},lenguaje) }}</button>
                        </div>
                    </form>                    
                </div>
                <div class="col-lg-4"></div>    
            </div>
        </div>
    </section>

