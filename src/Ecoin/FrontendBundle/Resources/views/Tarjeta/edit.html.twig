{% extends '::frontend_usr.html.twig' %}

{% block title %}
    {{ 'Mis medios de pago'|trans({},lenguaje) }} - {{ 'Editar'|trans({},lenguaje) }}
{% endblock %}              

{% block comboidioma %}
  <li><a href="{{ path('tarjeta_edit', { 'id': entity_tarjeta.id, '_locale': 'es' }) }}">{{ 'Español'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('tarjeta_edit', { 'id': entity_tarjeta.id, '_locale': 'en' }) }}">{{ 'Ingles'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('tarjeta_edit', { 'id': entity_tarjeta.id, '_locale': 'pt' }) }}">{{ 'Portugués'|trans({},lenguaje) }}</a></li>
  <li><a href="{{ path('tarjeta_edit', { 'id': entity_tarjeta.id, '_locale': 'it' }) }}">{{ 'Italiano'|trans({},lenguaje) }}</a></li>  
{% endblock %}  

{% block jumbotron %}

{% endblock %}      

{% block javascripts %}
    
{% endblock %}

{% block activelugar %} {% endblock %}
{% block activepago %} in {% endblock %}
{% block activecuenta %} {% endblock %}
{% block activerepo %} {% endblock %}

{% block contenido %}
  
  <div class ="col-xs-12 col-sm-12 col-md-10 col-lg-8">
     {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-success">
          <span class="glyphicon glyphicon-ok"></span>{{ flashMessage }}
        </div>
      {% endfor %}

    <div class="panel panel-default">  
      <div class="panel-heading">
        <span class="glyphicon glyphicon-user"></span>
        {{ 'Mis medios de pago'|trans({},lenguaje) }} / <span class="glyphicon glyphicon-pencil"></span>{{ 'Editar'|trans({},lenguaje) }}
      </div>

      <div class="panel-body">    
		<br>
       
        {{ form_start(edit_form, {'attr': {'role': 'form'}}) }}
     
        {{ form_errors(edit_form) }} 

        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">              
          {% if form_errors(edit_form.producto) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.producto) }}</div>   
          {% endif %}          
          <label>{{ 'Tarjeta'|trans({},lenguaje) }}</label>    
          {{ form_widget(edit_form.producto, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">              
          {% if form_errors(edit_form.numero) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.numero) }}</div>   
          {% endif %}          
          <label>{{ 'Numero'|trans({},lenguaje) }}</label>    
          {{ form_widget(edit_form.numero, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group col-xs-3 col-sm-4 col-md-4 col-lg-4">                
          <label>{{ 'Vencimiento'|trans({},lenguaje) }}</label>
          {{ form_widget(edit_form.expdate.month, {'attr': {'class': 'form-control'}}) }}           
        </div> 
        
        <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">                
          <label>&nbsp;</label>                    
          {{ form_widget(edit_form.expdate.year, {'attr': {'class': 'form-control'}}) }}            
        </div>    
        
        <div class="form-group hidden-xs hidden-sm hidden-md hidden-lg">                
          <label>&nbsp;</label>              
          {{ form_widget(edit_form.expdate.day, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group col-xs-5 col-sm-4 col-md-4 col-lg-4">              
          {% if form_errors(edit_form.securitycode) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.securitycode) }}</div>   
          {% endif %}          
          <label>{{ 'Security Code'|trans({},lenguaje) }}</label>    
          {{ form_widget(edit_form.securitycode, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group col-xs-11 col-sm-11 col-md-11 col-lg-11">              
          {% if form_errors(edit_form.holdername) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.holdername) }}</div>   
          {% endif %}          
          <label>{{ 'Nombre del titular'|trans({},lenguaje) }}</label>    
          {{ form_widget(edit_form.holdername, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">   
            <a href="{{ path('tarjeta') }}" class="btn btn-primary btn-md btn-block" title="{{ 'Regresar'|trans({},lenguaje) }}"><span class="glyphicon glyphicon-th-list"></span>{{ 'Listado'|trans({},lenguaje) }}</a>
          </div>

        <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">                       
          <button type="submit" class="btn btn-success btn-md btn-block">
            <span class="glyphicon glyphicon-ok"></span> {{ 'Guardar cambios'|trans({},lenguaje) }}
          </button>                    
        </div>        
        <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">                               
          <button type="reset" class="btn btn-danger btn-md btn-block"><span class="glyphicon glyphicon-refresh"></span>            
            {{ 'Cancelar'|trans({},lenguaje) }}</button>      
        </div>
      
        {{ form_end(edit_form) }}                
      </div>
    </div>
  </div>
        
{% endblock %}
