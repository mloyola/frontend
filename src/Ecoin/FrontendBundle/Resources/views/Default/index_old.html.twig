{% block introheader %}
   <div class="intro-header">

        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-md-8 col-md-pull-2 col-lg-9 col-lg-pull-2">
                    <div class="intro-message">
                        {#<h1>Ecoinmobile</h1>#}                        
                        <h2>{{ "Paga tus compras desde tu móvil" | trans }}</h2>
                        <h3>{{ "Fácil y seguro" | trans }}</h2>
