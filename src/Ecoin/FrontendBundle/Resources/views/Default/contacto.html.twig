{% extends '::frontend.html.twig' %}

{% block title %}
    {{ 'Contáctanos'|trans({},lenguaje) }}
{% endblock %}

{% block header_barra %} <nav class="navbar navbar-default navbar-fixed-top navbar-shrink"> {% endblock %}

{% block menu_item %}
    <li><a class="page-scroll" href="{{ path('frontend_homepage') }}">{{ "Paga tus compras" | trans }}</a></li>
    <li><a class="page-scroll" href="{{ path('frontend_homepage_comercio') }}">{{ "Para Comercios" | trans }}</a></li>                    
    <li><a class="page-scroll" href="{{ path('frontend_homepage_faqs') }}">{{ "Faqs" | trans }}</a></li>
    <li><a class="page-scroll" href="{{ path('usuario_login') }}">{{ "Iniciar Sesion" | trans }}</a></li>    
{% endblock %}

{% block body %}

    <!-- Contacto Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ "Contáctanos" | trans }}</h2>                    
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Tu Nombre *" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Tu Correo Electrónico *" id="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" placeholder="Tu N° de Móvil *" id="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Tu Mensaje *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">{{ "Enviar Mensaje" | trans }}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}        